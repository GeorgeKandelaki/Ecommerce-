.product-card
    .product-card__img-box
        img(src=`/images/${product.images.jpgs[0]}` alt="image of the product")
  
    .product-card__content
        p.product-card__name #{product.name}
        p.product-card__company 
            #{"Company":} 
            span.product-card__value #{product.company}
        p.product-card__discount 
            #{"Discount:"} 
            span.product-card__value #{product.discount}
        p.product-card__original-price 
            #{"Original Price:"}
            span.product-card__value #{product.price.toFixed(2)}
        p.product-card__price 
            #{"Price:"} 
            span.product-card__value #{product.discountPrice.toFixed(2)} 
    
    button.btn-go-to #{"View the Detail Page"}
